{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "debug",
      "displayName": "Debug Build",
      "description": "Debug build with validation layers enabled",
      "binaryDir": "${sourceDir}/build-debug",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS_INIT": "-O0 -g -fno-exceptions",
        "CMAKE_EXE_LINKER_FLAGS_INIT": ""
      }
    },
    {
      "name": "release",
      "displayName": "Release Build",
      "description": "Fully optimized release build with LTO",
      "binaryDir": "${sourceDir}/build-release",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_FLAGS_INIT": "-O3 -DNDEBUG -march=native -mtune=native -flto=auto -fno-exceptions -fno-rtti -fno-unwind-tables -fno-asynchronous-unwind-tables -fomit-frame-pointer -ffunction-sections -fdata-sections -fvisibility=hidden -fmerge-all-constants",
        "CMAKE_EXE_LINKER_FLAGS_INIT": "-flto=auto -Wl,--gc-sections -Wl,--strip-all"
      }
    },
    {
      "name": "release-portable",
      "displayName": "Release Build (Portable)",
      "description": "Optimized release without march=native for portability",
      "binaryDir": "${sourceDir}/build-release-portable",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_FLAGS_INIT": "-O3 -DNDEBUG -flto=auto -fno-exceptions -fno-rtti -fno-unwind-tables -fno-asynchronous-unwind-tables -fomit-frame-pointer -ffunction-sections -fdata-sections -fvisibility=hidden -fmerge-all-constants",
        "CMAKE_EXE_LINKER_FLAGS_INIT": "-flto=auto -Wl,--gc-sections -Wl,--strip-all"
      }
    },
    {
      "name": "relwithdebinfo",
      "displayName": "Release with Debug Info",
      "description": "Optimized build with debug symbols and validation layers",
      "binaryDir": "${sourceDir}/build-relwithdebinfo",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_CXX_FLAGS_INIT": "-O2 -g -march=native -fno-exceptions -fno-rtti",
        "CMAKE_EXE_LINKER_FLAGS_INIT": ""
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "debug"
    },
    {
      "name": "release",
      "configurePreset": "release"
    },
    {
      "name": "release-portable",
      "configurePreset": "release-portable"
    },
    {
      "name": "relwithdebinfo",
      "configurePreset": "relwithdebinfo"
    }
  ]
}
